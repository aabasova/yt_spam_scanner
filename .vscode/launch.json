    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Middleware Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/middleware",
                    "remoteRoot": "/code"
                }
            ],
            "justMyCode": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/frontend/src"
        }
    ]
}